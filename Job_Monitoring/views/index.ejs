<body>
    
<div class = "container">

    <form class="form-signin" method="POST" action="/login">
        <h3 style="text-align: center;">Kirjaudu sisään</h3>

        <input class="form-control" type="text" name="tunnus" placeholder="Käyttäjätunnus">
        <input class="form-control" type="password" name="salasana" placeholder="Salasana">

        <input class="btn btn-primary btn-block" type="submit" value="Kirjaudu Sisään">
        <input class="btn btn-danger btn-block" type="reset" value="Peruuta">
        <br/>
         <% if(virhe){ %> 
                
            <div class="alert alert-danger">
                <%=virhe %> 
            </div>

            <%  } %> 

    </form>
    

</div>



</body>
</html>